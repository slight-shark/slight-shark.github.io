---
import { getCollection, getEntry, render } from "astro:content"

import NavbarLayout from "@/layouts/NavbarLayout.astro"
import Toc from "@/components/Toc"

export async function getStaticPaths() {
  let writeups = await getCollection("writeups")

  return writeups
    .filter(post => post.data.visible)
    .map(w => ({
    params: {
      slug: w.id
    }
  }))
}

const { slug } = Astro.params

const post = await getEntry("writeups", slug)

if (!post) return Astro.rewrite("/404")

const { Content, headings } = await render(post)
---

<NavbarLayout>
  <div class="grid grid-cols-1 md:grid-cols-4 gap-12 w-full xl:w-[1380px] xl:mx-auto px-8 md:px-16 lg:px-48 pb-8 md:pb-24">
    <div class="col-span-3 flex flex-col gap-6">
      <div class="w-auto pt-[4em]">
        <h1 class="break-all">{post.data.title}</h1>
        <div class="mt-6 text-lg text-white">
          by {post.data.authors.join(", ")}
        </div>
        <div class="mt-2 text-lg text-white opacity-60">
          {post.data.date.toLocaleDateString()}
        </div>
      </div>
      <div class="wavy-line" />
      <div class="markdown-body">
        <Content />
      </div>
    </div>
    <div class="hidden md:block">
      <Toc client:load headings={headings.filter(h => h.depth <= 1)} />
    </div>
  </div>
</NavbarLayout>
